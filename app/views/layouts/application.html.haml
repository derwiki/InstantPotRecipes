!!!
%html
  %head
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Instant Pot Reviews and Recipes'
    %meta{name: "description", content: "#{content_for?(:description) ? yield(:description) : 'Instant Pot Recipes'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
  %body
    %header
    %main{role: "main"}
      = render 'layouts/messages'
      = yield

    .container-fluid= render 'shared/amazon_row'

